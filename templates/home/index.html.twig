{% extends 'base.html.twig' %}

{% block title %}Wonder!{% endblock %}

{% block body %}
   
    <section>
        {% for question in questions %}
            <div class="block block-shadow mb-20 d-flex flex-row-nowrap">
                {% include "partials/_rating.html.twig" with{ rating: question.rating, from: 'question', id: question.id } %}
                <a class="flex-fill d-flex flex-col" href="{{ path('question_show', { id: question.id }) }}">
                    <div class="mb-20 question-content pb-20">
                        <h3>{{ question.title }}</h3>
                        <p class="question-text">{{ question.content }}</p>
                    </div>
                    <div class="d-flex flex-row justify-between align-center">
                        <div class="d-flex flex-row align-center">
                            <img class="avatar mr-10" src="https://randomuser.me/api/portraits/men/24.jpg">
                            <small>Demandé par <span class="clickable">Jean Louis Hervé</span></small>
                        </div>
                        <div class="d-flex flex-row align-center">
                            <i class="far fa-comment mr-10"></i>
                            <p>{{ question.nbrOfResponse }}</p>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </section>

{% endblock %}
