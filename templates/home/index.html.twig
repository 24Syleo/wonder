{% extends 'base.html.twig' %}

{% block title %}Wonder!{% endblock %}

{% block body %}
   
    <ul>
        {% for question in questions %}
            <li class="block block-shadow d-flex flex-row mb-20">
                <div class="d-flex flex-col mr-20 align-center">
                    <i class="fas fa-arrow-up  {{ question.rating > 0 ? "rating-up" : '' }}"></i>
                        <p
                            {% if question.rating > 0 %}
                                class="rating-up text-small"
                            {% elseif question.rating < 0 %}
                                class="rating-down text-small"
                            {% else %}
                                class="text-small"
                            {% endif %}
                        >{{  question.rating }}</p>
                    <i class="fas fa-arrow-down {{ question.rating < 0 ? "rating-down" : '' }}"></i>
                </div>
                <div class="flex-fill d-flex flex-col">
                    <div class="mb-20 question-content pb-20">
                        <h3>{{ question.title }}</h3>
                        <p>{{ question.content }}</p>
                    </div>
                    <div class="d-flex flex-row justify-between align-center">
                        <div class="d-flex flex-row align-center">
                            <img class="avatar mr-10" src="{{ question.author.avatar }}">
                            <small>Demand√© par <span class="clickable">{{ question.author.name }}</span></small>
                        </div>
                        <div class="d-flex flex-row align-center">
                            <i class="far fa-comment mr-10"></i>
                            <p>{{ question.nbrOfResponse }}</p>
                        </div>
                    </div>
                </div>
            </li>

        {% endfor %}
    </ul>

{% endblock %}
