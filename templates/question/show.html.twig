{% extends 'base.html.twig' %}

{% block title %}
	{{ question.title }}
{% endblock %}

{% block styleSheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('css/question_show.css') }}">
{% endblock %}

{% block body %}
	<div class="block">
		<div class="d-flex flex-row-nowrap">
			{% include "partials/_rating.html.twig" with { rating: question.rating } %}
			<div class="d-flex flex-col">
				<div class="pb-30 d-flex flex-row-nowrap align-center">
					<h3 class="mr-10">{{ question.title }}</h3>
					<div class="question-tag">QUESTION</div>
					<img class="avatar ml-auto" src="https://randomuser.me/api/portraits/men/6.jpg">
				</div>
				<p class="question-text">{{ question.content }}</p>
				<div class="separator"></div>
				{% for comment in question.comments %}
					<div class="d-flex flex-row-nowrap mb-20">
						{% include "partials/_rating.html.twig" with { rating: comment.rating } %}
						<div class="d-flex flex-col">
							<div class="d-flex flex-row-nowrap align-center pb-10">
								<img src="https://randomuser.me/api/portraits/men/18.jpg" class="avatar mr-10">
								<p class="clickable">Ahmed Khechich</p>
								<small class="ml-auto">12/12/23</small>
							</div>
							<p class="question-response-text">{{ comment.content }}</p>
						</div>
					</div>
				{% endfor %}
				<div class="separator"></div>
				<h3 class="pb-20">Votre r√©ponse</h3>
				<div class="comment-form">
					{{ form_start(form) }}
					{{ form_rest(form) }}
					<button class="btn btn-primary">Soumettre</button>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
